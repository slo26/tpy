function billing_write_off_node_presave(Drupal\Core\Entity\EntityInterface $node) {
    if ( $node->type->target_id == "billing_write_off" ) {
        $query = \Drupal::entityQuery("node");
        $query->condition('type', 'billing');
        $query->condition('field_expected_receive_payment', [$node->field_begin_date->value, $node->field_end_date->value], "BETWEEN");
        $query->condition("field_customer_entity", $node->field_customer_entity->target_id);
        $bill_nids = $query->execute();
        foreach($bill_nids as $bill_nid) {
            $bill = \Drupal\node\Entity\Node::load($bill_nid);
            $bill->set('field_actual_received_payment', date("Y-m-d"));
            $bill->save();
        }
    }
}

function billing_write_off_node_insert(Drupal\Core\Entity\EntityInterface $node) {
    if ( $node->type->target_id == "billing_write_off" ) {
        if ( $node->field_accumulated_advance->value > 0 ) {
            $store_credit = \Drupal\taxonomy\Entity\Term::create(['vid' => 'prepaid_balance']);
            $store_credit->set('name', gen_store_credit_id());
            $store_credit->field_customer_entity->target_id = $node->field_customer_entity->target_id; 
            $store_credit->set('field_create_date', date("Y-m-d"));
            $store_credit->field_from_bill_write_off_entity->target_id = $node->id();
            $store_credit->set('field_store_credit', $node->field_accumulated_advance->value);
            $store_credit->set('status', false);
            $store_credit->save();
        }
        if ( !empty($node->field_store_credit_entity->target_id) ) {
            $store_credit = \Drupal\taxonomy\Entity\Term::load($node->field_store_credit_entity->target_id);
            $store_credit->field_to_bill_write_off->target_id = $node->id();
            $store_credit->save();
        }
    }
}

