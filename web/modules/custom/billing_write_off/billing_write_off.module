function billing_write_off_node_delete(Drupal\Core\Entity\EntityInterface $node) {
    if ( $node->type->target_id == "billing_write_off" ) {
        $field_sale_purchase_entities = $node->field_sale_purchase_entity;
        for ($i=0; $i < count($field_sale_purchase_entities); $i++) {
            $sale_nid = $field_sale_purchase_entities[$i]->target_id;
            $sale = \Drupal\node\Entity\Node::load($sale_nid);
            $bill_nid = $sale->field_bill->target_id;
            $bill = \Drupal::entityTypeManager()->getStorage("node")->load($bill_nid);
            $bill->delete();
        }
        $nids = \Drupal::entityQuery("taxonomy_term")
                    ->condition("vid", "prepaid_balance")
                    ->condition("field_customer_entity", $node->field_customer_entity->target_id)
                    ->condition("field_from_bill_write_off_entity", $node->nid->value)
                    ->execute();
        foreach($nids as $nid) {
            $entity = \Drupal::entityTypeManager()->getStorage("taxonomy_term")->load($nid);
            $entity->delete();
        }

        //$current = \Drupal::entityTypeManager()->getStorage("node")->load($node->id());
        //$current->delete();
    }
}

