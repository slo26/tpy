function _mySubmit(array &$form, FormStateInterface $form_state) {
    $node = $form_state->getFormObject()->getEntity();
    $begin_date = $node->field_begin_date->value;
    $end_date = $node->field_end_date->value;
    $customer_nid = $node->field_customer_entity->target_id;
    $query = \Drupal::entityQuery("node");
    $query->condition('type', 'billing');
    $query->condition('field_expected_receive_payment', [$begin_date, $end_date], "BETWEEN");
    $query->condition("field_customer_entity", $customer_nid);
    $bill_nids = $query->execute();
    $index=1;
    foreach($bill_nids as $bill_nid) {
        $bill = \Drupal\node\Entity\Node::load($bill_nid);
        $field_receipt_number = $form_state->getValue('sell_list_in_table')[$index]['field_receipt_number'];
        $field_discount = $form_state->getValue('sell_list_in_table')[$index]['field_discount'];
        $field_offset_amount = $form_state->getValue('sell_list_in_table')[$index]['field_offset_amount'];
        $bill->set('field_receipt_number', $field_receipt_number);
        $bill->set('field_discount', $field_discount);
        $bill->set('field_write_off_amount', $field_offset_amount);
        $bill->save();
        $index++;
    }
}

function ajax_calculate_prepaid_callback(array $form, FormStateInterface $form_state) {
    $ajax_response = new AjaxResponse();
    $field_receivable_balance = $form_state->getValue('field_receivable_balance')[0]['value'];
    if ( $field_receivable_balance > 0 ) {
        $field_advance_balance = $form_state->getValue('field_advance_balance')[0]['value'];
        $field_cash_amount = $form_state->getValue('field_cash_amount')[0]['value'];
        $field_check_amount = $form_state->getValue('field_check_amount')[0]['value'];
        $field_remittance_amount = $form_state->getValue('field_remittance_amount')[0]['value'];
        $field_remittance_fee = $form_state->getValue('field_remittance_fee')[0]['value'];
        $field_hedgen_amount = $form_state->getValue('field_hedgen_amount')[0]['value'];
        $field_total_discount = $form_state->getValue('field_total_discount')[0]['value'];

        $paid = round($field_advance_balance+$field_cash_amount+$field_check_amount+$field_remittance_amount+$field_remittance_fee+$field_hedgen_amount+$field_total_discount);
        $prepaid = round($paid - $field_receivable_balance);
        $remaining = 0;
        if ( $prepaid > 0 ) {
            $ajax_response->addCommand(new InvokeCommand('#edit-field-accumulated-advance-0-value', 'val', [$prepaid]));
            $remaining = $paid - $prepaid;
        } else {
            $ajax_response->addCommand(new InvokeCommand('#edit-field-accumulated-advance-0-value', 'val', [0]));
            $remaining = $paid;
        }
        
        $ajax_response->addCommand(new InvokeCommand('#edit-field-offset-amount-0-value', 'val', [$remaining]));
    }
    
	return $ajax_response;
}

function ajax_auto_hedgen_callback(array $form, FormStateInterface $form_state){
    $ajax_response = new AjaxResponse();
    $node = $form_state->getFormObject()->getEntity();
    $begin_date = $node->field_begin_date->value;
    $end_date = $node->field_end_date->value;
    $customer_nid = $node->field_customer_entity->target_id;
    $query = \Drupal::entityQuery("node");
    $query->condition('type', 'billing');
    $query->condition('field_expected_receive_payment', [$begin_date, $end_date], "BETWEEN");
    $query->condition("field_customer_entity", $customer_nid);
    $bill_nids = $query->execute();
    for($i=1; $i <= count($bill_nids); $i++) {
        $field_remain_unpaid_amount = $form_state->getValue('sell_list_in_table')[$i]['field_remain_unpaid_amount'];
        $field_discount = $form_state->getValue('sell_list_in_table')[$i]['field_discount'];
        $field_remain_unpaid_amount = $field_remain_unpaid_amount - $field_discount;
        $ajax_response->addCommand(new InvokeCommand('#edit-sell-list-in-table-' . $i . '-field-offset-amount', 'val', [$field_remain_unpaid_amount]));
    }
    
    return $ajax_response;
}

